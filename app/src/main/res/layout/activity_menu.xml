<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginBottom="0dp"
    android:background="@android:color/holo_blue_light"
    android:orientation="vertical">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center|center_vertical"
        android:background="@android:color/holo_blue_light"
        android:fontFamily="@font/comfortaa"
        android:gravity="center"
        android:text="ParkedUp"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Turn Notifications on or off"
            android:textSize="18dp"
            android:fontFamily="@font/comfortaa" />

        <ToggleButton
            android:id="@+id/notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ToggleButton"
            android:textOff="Off"
            android:textOn="On"
            android:textSize="18dp"
            android:fontFamily="@font/comfortaa" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/MIKI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Miles or Kilometers"
            android:fontFamily="@font/comfortaa"
            android:textSize="18dp"/>

        <ToggleButton
            android:id="@+id/MIKItoggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ToggleButton"
            android:textOff="Miles"
            android:textOn="Kilometers"
            android:fontFamily="@font/comfortaa"
            android:textSize="18dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/aboutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About"
        android:fontFamily="@font/comfortaa"
        android:textSize="18dp"/>



    <Button
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Return"
        android:fontFamily="@font/comfortaa"
        android:textSize="18dp"/>

    <!--<Button-->
        <!--android:id="@+id/mapsBack"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Back to parking location" />-->

</LinearLayout>
